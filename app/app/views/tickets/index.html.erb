<h2>Tickets</h2>
<div class="tickets">
  <table>
    <thead>
      <tr>
        <th class="id">id</th>
        <th class="subject">Subject</th>
      </tr>
    </thead>

    <tbody>
      <% @tickets.each do |ticket| %>
        <tr>
          <td><a href="/tickets/<%= ticket['id'] %>"><%= ticket['id'] %><a></td>
          <td><%= ticket['raw_subject'] %></td>
        </tr>
      <% end %>
    </tbody>
    
  </table>
  <br>
  <% if @prev_page %>
    <a href="<%= @prev_page %>">Previous</a>
  <% end %>
  <%= @page %>
  <% if @next_page %>
    <a href="<%= @next_page %>">Next</a>
  <% end %>
</div>